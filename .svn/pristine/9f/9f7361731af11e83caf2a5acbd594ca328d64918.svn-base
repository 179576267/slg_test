package com.douqu.game.main.util;

import com.douqu.game.main.gui.MainFrame;
import org.apache.log4j.Logger;

/**
 * @Author: Bean
 * @Description:
 * @Date: 2017-11-21 14:44
 */
public class PrintUtils {

    public static void info(Logger logger, String content)
    {
        logger.info(content);
        MainFrame.println(content);
    }

    public static void warn(Logger logger, String content)
    {
        logger.warn(content);
        MainFrame.println(content);
    }

    public static void error(Logger logger, String content)
    {
        logger.error(content);
        MainFrame.println(content);
    }
}
